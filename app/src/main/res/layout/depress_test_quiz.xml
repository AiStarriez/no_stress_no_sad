<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgn">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/depressQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="20dp"
            />

        <RadioGroup
            android:id="@+id/depressAnswerGroup"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_marginTop="100dp"
            android:orientation="horizontal"
            android:background="@drawable/st20_radiobutton">

            <RadioButton
                android:id="@+id/depressTestNever"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="50dp"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="25dp"
                android:textColor="#ffff"
                android:buttonTint="#ffff"
                android:text="@string/btn_never"/>
            <RadioButton
                android:id="@+id/depressTestSometimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="50dp"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="25dp"
                android:textColor="#ffff"
                android:buttonTint="#ffff"
                android:text="@string/btn_sometimes"/>
            <RadioButton
                android:id="@+id/depressTestUsually"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="50dp"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="25dp"
                android:textColor="#ffff"
                android:buttonTint="#ffff"
                android:text="@string/btn_usually"/>
            <RadioButton
                android:id="@+id/depressTestAlways"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="50dp"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="25dp"
                android:textColor="#ffff"
                android:buttonTint="#ffff"
                android:text="@string/btn_everyday"/>

        </RadioGroup>

        <Button
            android:id="@+id/btnNextQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            android:layout_marginHorizontal="10dp"
            android:text="@string/btn_next" />

    </RelativeLayout>

</LinearLayout>